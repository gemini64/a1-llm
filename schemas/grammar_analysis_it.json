{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "/schemas/grammar_analysis_it.json",
    "title": "Analisi Grammaticale",
    "description": "Un report di analisi grammaticale di un testo",
    "type": "object",
    "properties": {
        "nomi": {
            "type": "array",
            "description": "I nomi riconosciuti all'interno del testo",
            "items": { "$ref": "#/$defs/nome" }
        },
        "pronomi": {
            "type": "array",
            "description": "I pronomi identificati all'interno del testo",
            "items": { "$ref": "#/$defs/pronome" }
        },
        "aggettivi": {
            "type": "array",
            "description": "Gli aggettivi identificati all'interno del testo",
            "items": { "$ref": "#/$defs/aggettivo" }
        },
        "avverbi": {
            "type": "array",
            "description": "Gli avverbi identificati all'interno del testo",
            "items": { "$ref": "#/$defs/avverbio" }
        },
        "verbi": {
            "type": "array",
            "description": "I verbi identificati all'interno del testo",
            "items": { "$ref": "#/$defs/verbo" }
        },
        "preposizioni": {
            "type": "array",
            "description": "Le preposizoni identificate all'interno del testo",
            "items": { "$ref": "#/$defs/preposizione" }
        },
        "congiunzioni": {
            "type": "array",
            "description": "Le congiunzioni identificate all'interno del testo",
            "items": { "$ref": "#/$defs/congiunzione" }
        }
    },
    "required": ["nomi", "pronomi", "aggettivi", "avverbi", "verbi", "preposizioni", "congiunzioni"],
    "$defs": {
        "nome": {
            "type": "object",
            "description": "Descrive un nome e le sue caratteristiche morfologiche",
            "properties": {
                "testo": {
                    "type": "string",
                    "description": "Il nome riconosciuto"
                },
                "genere": {
                    "enum": [ "maschile", "femminile" ],
                    "description": "Il genere del nome riconosciuto"
                },
                "numero": {
                    "enum": [ "singolare", "plurale" ],
                    "description": "Il numero del nome riconosciuto"
                }
            },
            "required": ["testo", "genere", "numero"]
        },
        "pronome": {
            "type": "object",
            "description": "Descrive un pronome",
            "properties": {
                "testo": {
                    "type": "string",
                    "description": "Il pronome riconosciuto"
                },
                "tipo": {
                    "enum": ["personale", "relativo", "possessivo", "dimostrativo", "indefinito", "interrogativo", "esclamativo", "qualificativo", "numerale"],
                    "description": "Il tipo del pronome, sulla base delle categorie della lingua italiana"
                }
            },
            "required": ["testo", "tipo"]
        },
        "aggettivo": {
            "type": "object",
            "description": "Descrive un aggettivo e le sue caratteristiche morfologiche",
            "properties": {
                "testo": {
                    "type": "string",
                    "description": "L'aggettivo riconosciuto"
                },
                "tipo": {
                    "enum": ["qualificativo", "possessivo", "numerale", "dimostrativo", "indefinito", "interrogativo", "esclamativo"],
                    "description": "Il tipo dell'aggettivo, sulla base delle categorie della lingua italiana"
                },
                "grado": {
                    "enum": ["positivo", "relativo", "superlativo"],
                    "description": "Il grado dell'aggettivo"
                }
            },
            "required": ["testo", "tipo", "grado"]
        },
        "avverbio": {
            "type": "object",
            "description": "Descrive un avverbio e le sue caratteristiche morfologiche",
            "properties": {
                "testo": {
                    "type": "string",
                    "description": "L'avverbio riconosciuto"
                },
                "tipo": {
                    "enum": ["di modo", "di luogo", "di tempo", "di luogo", "di affermazione", "di negazione", "di dubbio", "interrogativo", "esclamativo"],
                    "description": "Il tipo dell'avverbio, sulla base delle categorie della lingua italiana"
                },
                "grado": {
                    "enum": ["positivo", "relativo", "superlativo"],
                    "description": "Il grado dell'avverbio"
                }
            },
            "required": ["testo", "tipo", "grado"]
        },
        "verbo": {
            "type": "object",
            "description": "Descrive un verbo e le sue caratteristiche morfologiche",
            "properties": {
                "testo": {
                    "type": "string",
                    "description": "Il verbo riconosciuto"
                },
                "lemma": {
                    "type": "string",
                    "description": "Il lemma base del verbo (es. vedo -> vedere)"
                },
                "persona":
                {
                    "enum": ["prima", "seconda", "terza"],
                    "description": "Persona a cui il verbo riconosciuto è coniugato"
                },
                "numero":
                {
                    "enum": ["singolare", "plurale "],
                    "description": "Numero a cui il verbo riconosciuto è coniugato"
                },
                "modo": {
                    "enum": ["indicativo", "congiuntivo", "condizionale", "imperativo", "infinito", "participio", "gerundio"],
                    "description": "Modo del verbo"
                },
                "tempo": {
                    "enum": ["presente", "imperfetto", "passato prossimo", "passato remoto", "trapassato prossimo", "trapassato remoto", "passato", "futuro semplice", "futuro anteriore", "futuro"],
                    "description": "Tempo del verbo"
                },
                "forma": {
                    "enum": ["attiva", "passiva", "riflessiva"],
                    "description": "Forma del verbo"
                },
                "regolare": {
                    "type": "boolean",
                    "description": "true se il verbo riconosciuto è regolare"
                }
                
            },
            "required": ["testo", "lemma", "modo", "tempo", "forma", "regolare"]
        },
        "preposizione": {
            "type": "object",
            "description": "Descrive una preposizione",
            "properties": {
                "testo": {
                    "type": "string",
                    "description": "La preposizione riconosciuto"
                },
                "tipo": {
                    "enum": ["semplice", "articolata" ],
                    "description": "Il tipo della preposizione, sulla base delle categorie della lingua italiana"
                }
            },
            "required": ["testo", "tipo"]
        },
        "congiunzione": {
            "type": "object",
            "description": "Descrive una congiunzione",
            "properties": {
                "testo": {
                    "type": "string",
                    "description": "La congiunzione riconosciuto"
                },
                "tipo": {
                    "enum": ["semplice", "composta" ],
                    "description": "Il tipo della congiunzione, sulla base delle categorie della lingua italiana"
                },
                "funzione": {
                    "enum": ["coordinante", "subordinante" ],
                    "description": "La funzione della congiunzione, sulla base delle categorie della lingua italiana"
                }
            },
            "required": ["testo", "tipo", "funzione"]
        }
    }
}