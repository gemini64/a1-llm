{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "/schemas/syntactical_analysis_it_v1.json",
    "title": "Syntactical Analysis",
    "type": "object",
    "description": "Represents the syntactical analysis of an italian text of arbitrary length",
    "properties": {
        "text": {
            "type": "string",
            "description": "The full, unedited text that is being analyzed"
        },
        "sentences": {
            "type": "array",
            "description": "An array of sentences extracted from the text.",
            "items": {
                "type": "object",
                "properties": {
                    "content": {
                        "type": "string",
                        "description": "The text of the sentence."
                    },
                    "type": {
                        "enum": [
                            "semplice",
                            "complessa",
                            "composta"
                        ],
                        "description": "The type of sentence"
                    },
                    "clauses": {
                        "type": "array",
                        "description": "An array of clauses within the sentence.",
                        "items": {
                            "type": "object",
                            "properties": {
                                "content": {
                                    "type": "string",
                                    "description": "The text of the clause."
                                },
                                "role": {
                                    "enum": [
                                        "principale",
                                        "coordinata",
                                        "subordinata"
                                    ],
                                    "description": "The grammatical role of the clause (e.g., main clause, subordinate clause, coordinate clause)."
                                },
                                "type": {
                                    "type": "string",
                                    "description": "The type of the clause (e.g. oggettiva, soggettiva, causale, dichiarativa, ...)."
                                },
                                "rank": {
                                    "type": "integer",
                                    "description": "The subordinate rank of the clause"
                                }
                            },
                            "required": [
                                "content",
                                "role",
                                "type"
                            ]
                        }
                    }
                },
                "required": [
                    "content",
                    "type",
                    "clauses"
                ]
            }
        }
    },
    "required": [
        "text",
        "sentences"
    ]
}